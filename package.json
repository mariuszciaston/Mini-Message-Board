{
  "name": "mini-message-board",
  "version": "1.0.0",
  "description": "Simple message board application built with Node.js and Express.",
  "type": "module",
  "scripts": {
    "dev": "tsx --watch --env-file .env src/index.ts",
    "tailwind:build": "npx @tailwindcss/cli -i src/styles/input.css -o public/output.css --minify --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf dist",
    "build": "tsc && cp -r src/views dist/views",
    "start": "node --env-file .env dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mariuszciaston/Mini-Message-Board.git"
  },
  "author": "Mariusz Ciasto≈Ñ",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mariuszciaston/Mini-Message-Board/issues"
  },
  "homepage": "https://github.com/mariuszciaston/Mini-Message-Board#readme",
  "dependencies": {
    "@tailwindcss/cli": "^4.1.14",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "tailwindcss": "^4.1.14"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/express": "^5.0.3",
    "@types/node": "^24.7.0",
    "eslint": "^9.37.0",
    "eslint-plugin-perfectionist": "^4.15.1",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0"
  },
  "keywords": [],
  "imports": {
    "#*": "./src/*"
  }
}
