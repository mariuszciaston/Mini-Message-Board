{
  "name": "mini-message-board",
  "version": "1.0.0",
  "description": "Simple message board built with PostgreSQL, Node.js, Express, Typescript, Tailwind and EJS.",
  "type": "module",
  "engines": {
    "node": "22.20.0"
  },
  "scripts": {
    "tailwind:watch": "npx @tailwindcss/cli -i src/styles/input.css -o public/output.css --minify --watch",
    "dev": "tsx --watch src/index.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "clean": "rm -rf dist",
    "build": "tsc -p tsconfig.build.json && cp -r src/views dist/views",
    "start": "node dist/index.js",
    "seed": "node src/db/seed.ts",
    "local-db-start": "sudo service postgresql start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mariuszciaston/Mini-Message-Board.git"
  },
  "author": "Mariusz Ciasto≈Ñ",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mariuszciaston/Mini-Message-Board/issues"
  },
  "homepage": "https://github.com/mariuszciaston/Mini-Message-Board#readme",
  "dependencies": {
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/express": "^5.0.3",
    "@types/node": "^24.7.0",
    "@types/pg": "^8.15.5",
    "eslint": "^9.37.0",
    "eslint-plugin-perfectionist": "^4.15.1",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "prettier-plugin-ejs": "^1.0.3",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.14",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0"
  },
  "keywords": [],
  "imports": {
    "#*": "./src/*"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --check"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --check"
    ]
  }
}
